extends src/pug/_template

include src/pug/mixins/_sidebar

block metaTagsForCurrentPage
	meta(name="description" content=metaDescription.descriptionHome)
	meta(name="keywords" content=metaKeywords.keywordsHome)
block title
	| Home page

	block content
		// hero
		section.hero
			.hero-container
				h1.text-slanted rest, relax, unwind
				h3 Embrace your choice â€” we do
				a(href="" class="hero-btn") show now
		// sidebar
		.sidebar-overlay
			aside.sidebar
				// close the sidebar
				button.sidebar-close
					i.fas.fa-times
				// links
				ul.sidebar-links
					+sidebar(pages)
		.cart-overlay
			aside.cart
				button.cart-close
					i.fas.fa-times
				header
					h3.text-slanted your bag
				// cart items
				.cart-items
					// single items
					article(class="cart-item" data-id="")
						img(class="cart-item-img" src="src/images/main-bcg.jpeg" alt="name")
						// item info
						div
							h4.cart-item-name high-back bench
							p.cart-item-price $13.99
							button.cart-item-remove-btn remove
						// amount toggle
						div
							button.cart-item-increase-btn
								i.fas.fa-chevron-up
							p.cart-item-amount 1
							button.cart-item-decrease-btn
								i.fas.fa-chevron-down

					// end of single items

				footer
					h3.cart-total.text-slanted total: $12.99
					button.cart-checkout.btn checkout


